      'price' => 0,
    ),
    3 => array(
      'name' => 'U3',
      'price' => 0,
    ),
    4 => array(
      'name' => 'U4',
      'price' => 0,
    ),
  );

  $courts_final = array();

  foreach ($courts as $court) {
    foreach ($hours as $hour) {
      $hours_prices[$hour] = array(
        'hour' => $hour,
        'price' => 0,
      );
      $courts_final[$court['name']] = array(
        'name' => $court['name'],
        'hours' => $hours_prices,
      );
    }
  }
  return $courts_final;
}


